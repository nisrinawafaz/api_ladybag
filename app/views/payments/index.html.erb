<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Fullname</th>
      <th>Country</th>
      <th>City</th>
      <th>District</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Cart</th>
      <th>Subtotal</th>
      <th>Total</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><%= payment.user_id %></td>
        <td><%= payment.fullname %></td>
        <td><%= payment.country %></td>
        <td><%= payment.city %></td>
        <td><%= payment.district_id %></td>
        <td><%= payment.address %></td>
        <td><%= payment.phone %></td>
        <td><%= payment.cart_id %></td>
        <td><%= payment.subtotal %></td>
        <td><%= payment.total %></td>
        <td><%= payment.status_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
