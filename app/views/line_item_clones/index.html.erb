<h1>Line Item Clones</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_item_clones.each do |line_item_clone| %>
      <tr>
        <td><%= link_to 'Show', line_item_clone %></td>
        <td><%= link_to 'Edit', edit_line_item_clone_path(line_item_clone) %></td>
        <td><%= link_to 'Destroy', line_item_clone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

